
<div class="ui grid">
  <div class="twelve column centered row">
    <div class="column">
      <h1>Login</h1>
    </div>
  <div class="twelve column centered row">
    <div class="column">
      <%= flash[:error] %>

      <%= form_with url: "/sessions" do %>
        <p>Username
        <%= text_field_tag :username %>
        </p>
        <p>Password
        <%= password_field_tag :password %>
        </p>
        <%= submit_tag 'Log In' %>
      <% end %>
    </div>
  </div>
  <div class="twelve column centered row">
    <div class="column">
      <button><%= link_to 'Back',home_path %></button>
    </div>
  </div>
  </div>
