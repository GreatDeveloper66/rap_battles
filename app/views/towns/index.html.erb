<%= render partial: "layouts/menu" %>
<div class="ui grid">
  <div class="three wide column">
  </div>
  <div class="ten wide column">
    <h1>All of the Towns available for Rap Battles</h1>
  </div>
  <div class="three wide column">
  </div>


  <% @towns.each do |t| %>
    <div class="four wide column">
      <div class= "ui card">
        <div class="content">
          <div class="left floated">
            <p>City:</p>
          </div>
          <div class="right floated">
            <p><%= t.name %></p>
          </div>
        </div>
      <div class="image">
        <%=image_tag("Cities/#{t.imgurl}") %>
        <%=t.imgurl%>
      </div>
    <div class="content">
      <h2>Venues for this city</h2>
      <% t.venues.each do |v| %>
      <p><%= v.name %></p>
      <% end %>
    </div>
      </div>
    </div>
  <% end %>
</div>
